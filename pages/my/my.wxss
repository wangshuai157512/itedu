.header {
  width:750rpx;
background:linear-gradient(90deg,rgba(21,147,248,1) 0%,rgba(90,209,255,1) 100%);
color: #fff;
/* text-align: center; */
display: flex;
justify-content: center;
position: relative;
position: fixed;
top: 0;
z-index: 100;
}
.header_font {
  font-size: 18px;
  font-weight:500;
  position: absolute;
  bottom: 10px;
}
.my_head {
  position: relative;
}
.my_head_bg {
  width: 750rpx;
  height:310rpx;
  /* border-bottom: 1px solid #000; */
}
.my_head image {
  width: 100%;
  height: 100%;
}
.user {
  display: flex;
  /* align-items: center; */
  font-size:36rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  color: #fff;
  position: absolute;
  top: 60rpx;
  left: 30rpx;
}
.user_img {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
}
.user_img image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.user_name {
  padding-top: 20rpx;
  box-sizing: border-box;
}
.user_name button {
  color: #fff;
  margin: 0;
  padding: 0;
  width: 144rpx;
  /* min-height: 40px; */
  font-size:36rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight: normal;
  background-color: rgba(255,255,255,0);
}
.study_time {
  margin-left: 30rpx;
  width:690rpx;
  height:140rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 6px 20px 0px rgba(206,211,215,0.5);
  border-radius:16rpx;
  font-size:24rpx;
  color:rgba(149,156,166,1);
  position: absolute;
  bottom:-70rpx;
}
.study_time_top {
  width: 100%;
  height: 70rpx;
  display: flex;
  justify-content: space-around;
  align-items: flex-end;
  font-size:40rpx;
  font-family:Arial-BoldMT,Arial;
  font-weight:700;
  color:rgba(46,48,51,1);
  border-bottom: 1px dashed #fff; 
}
.study_time_bottom {
  width: 100%;
  height: 70rpx;
  display: flex;
  justify-content: space-around;
}
.content_list {
  width: 690rpx;
  margin-left: 30rpx;
  margin-top: 118rpx;
  font-size: 36rpx;
  font-weight:700;
  color:rgba(0,0,0,1)
}
.freeClass {
  font-family:PingFangSC-Medium,PingFang SC;
  /* padding-bottom: 4rpx; */
  position: relative;
}
.rectangle {
  width:148rpx;
  height:14rpx;
  background:rgba(120,207,255,1);
  border-radius:7rpx;
  opacity:0.39;
  position: absolute;
  bottom: 0;
}